<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, 'Postal code' %><br>
    <%= f.text_field :postal_code, autocomplete: 'postal_code',id: "user_postal_code" %>
  </div>

  <div class="field">
    <%= f.label :prefecture_name, 'Prefecture code'%><br>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' },id:"user_prefecture_code"%>
  </div>

  <div class="field">
    <%= f.label :city, 'City'%><br>
    <%= f.text_field :city, autocomplete: 'city',id: "user_address_city" %>
  </div>

  <div class="field">
    <%= f.label :street, 'Street'%><br>
    <%= f.text_field :street, autocomplete: 'street'%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" ,class: 'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
